{
  "name": "server-mockr",
  "version": "1.0.0",
  "description": "Package to mock HTTP APIs for fast and reliable testing.",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && copyfiles -u 2 ./src/control-server/{static,templates}/**/* ./dist/control-server/",
    "clean": "rimraf ./dist",
    "release": "npm test && npm run clean && npm run build",
    "start": "node ./dist/test/server.js",
    "test": "npm run build && npm run test:lint && npm run test:unit",
    "test:lint": "tslint -p .",
    "test:unit": "jest --runInBand"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/boschni/server-mockr.git"
  },
  "keywords": [
    "mock",
    "HTTP",
    "server",
    "test",
    "json",
    "API",
    "e2e",
    "verify",
    "stub"
  ],
  "author": "Niek Bosch <info@niek-bosch.nl>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/boschni/server-mockr/issues"
  },
  "homepage": "https://github.com/boschni/server-mockr#readme",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cookie": "^0.4.0",
    "cookie-parser": "^1.4.4",
    "ejs": "^3.0.1",
    "expect": "^25.1.0",
    "express": "^4.17.1",
    "json-pointer": "^0.6.0",
    "markdown-it": "^10.0.0",
    "path-to-regexp": "^6.1.0",
    "strip-ansi": "^6.0.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/cookie": "^0.3.3",
    "@types/cookie-parser": "^1.4.2",
    "@types/ejs": "^3.0.1",
    "@types/jest": "^25.1.3",
    "@types/json-pointer": "^1.0.30",
    "@types/markdown-it": "0.0.9",
    "@types/node": "^12.12.28",
    "@types/superagent": "^4.1.7",
    "copyfiles": "^2.2.0",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "superagent": "^5.2.2",
    "ts-jest": "^25.2.1",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-no-circular-imports": "^0.7.0",
    "typescript": "^3.8.2"
  }
}
